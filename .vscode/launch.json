    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug current TypeScript file as Node program",
            "protocol": "inspector",
            "args": ["${workspaceRoot}/src/cli.ts", 
                "${workspaceRoot}/../synergi-life-core-webclient/ui",
                "${workspaceRoot}/../synergi-life-core-webclient/tsconfig.json",
                "./result.json",
                "*Props"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": ["-r", "ts-node/register"],
            "internalConsoleOptions": "openOnSessionStart"
          }
    ]
}